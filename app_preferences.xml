<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Colour"
        >
        <ListPreference
            android:title="Change background list colour"
            android:summary="Select background list colour"
            android:key="ColourKey"
            android:entries="@array/Colour"
            android:entryValues="@array/Color_id"
            android:defaultValue="1">

        </ListPreference>
        <ListPreference
            android:title="Change button colour"
            android:summary="Select settings button colour"
            android:key="ColourButtonKey"
            android:entries="@array/ColourButton"
            android:entryValues="@array/Color_Button_id"
            android:defaultValue="1">

        </ListPreference>
    </PreferenceCategory>
</PreferenceScreen>
